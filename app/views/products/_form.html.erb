<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2 class="alert alert-danger"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label><strong>Nome</strong> ou título</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Ex. 2Kg de banana"  %>
    <small class="form-text text-muted">Um nome que descreva seu produto.</small>
  </div>

  <div class="form-group">
    <label><strong>Preço</strong></label>
    <%= f.number_field :price, class: "form-control", placeholder: "4 Bitcoins" %>
    <small class="form-text text-muted">O preço deste produto.</small>
  </div>

  <br>
  <%= f.submit "Salvar", :class => "btn btn-lg btn-block btn-success" %>
<% end %>
