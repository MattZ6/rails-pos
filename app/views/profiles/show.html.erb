<div class="profile-container">
  
  <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <% if current_user.profile.is_admin %>
    <h1 class="card-title text-center">Perfil</h1>
    <h6 class="card-subtitle mb-2 text-muted text-center">Todos os dados de <%= @profile.name %> que conseguimos encontrar.</h6>
  <% else %>
    <h1 class="card-title text-center">Meu perfil</h1>
    <h6 class="card-subtitle mb-2 text-muted text-center">Aqui você encontra todas as informações sobre nossa pessoa mais importante. <strong>Você</strong>!</h6>
  <% end %>

  <br>
  <div class="card">
    <div class="card-body">

      <div class="form-group">
        <label><strong>Nome</strong></label><br>
        <%= @profile.name %>
      </div>

      <div class="form-group">
        <label><strong>Idade</strong></label><br>
        <%= @profile.age %> anos
      </div>

      <div class="form-group">
        <label><strong>E-mail</strong></label><br>
        <%= @profile.user.email  %>
      </div>

      <% if @profile.is_admin %>
        <h4 class="text-center"><span class="badge badge-pill badge-dark">É um administrador</span></h4>
      <% end %>
      
      <br>
      <%= link_to 'Editar', edit_profile_path(@profile), class: "btn btn-block btn-secondary" %>
      <% if current_user.profile.is_admin %>
        <%= link_to 'Voltar', profiles_path, class: "btn btn-block btn-light" %>      
      <% else %>
        <%= link_to 'Voltar', pucharses_path, class: "btn btn-block btn-light" %>      
      <% end %>

    </div>
  </div>
</div>