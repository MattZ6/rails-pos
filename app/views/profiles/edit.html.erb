<div class="profile-container">

    <% if current_user.profile.is_admin %>
        <h1 class="text-center">Editar perfil</h1>
        <h6 class="text-center text-muted">Aqui você pode alterar o perfil.</h6>
    <% else %>
        <h1 class="text-center">Editar meu perfil</h1>
        <h6 class="text-center text-muted">Aqui você pode fazer a alteração que achar necessária em seu perfil.</h6>
    <% end %>

    <br>
    <div class="card">
        <div class="card-body">
            <%= render 'form' %>  

            <br>
            <% if current_user.profile.is_admin  %>
                <%= link_to 'Voltar', profiles_path, class: "btn btn-block btn-light" %>
            <% else %>
                <%= link_to 'Voltar', profile_path(current_user.profile), class: "btn btn-block btn-light" %>
            <% end %>
        </div>
    </div>  
</div>
